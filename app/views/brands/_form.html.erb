<%= form_with model: brand do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% brand.errors.full_messages_for(:title).each do |message| %>
      <div> Marka adı boş bırakılamaz! <%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
