<h1>New Product</h1>

<%= form_with model: @product do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :color %><br>
    <%= form.text_area :color %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>